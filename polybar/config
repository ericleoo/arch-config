[bar/bar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
;offset-x = 0%
;offset-y = 0%
fixed-center = true

locale = en_US.UTF-8

enable-ipc = true

padding-left = 3
padding-right = 3

module-margin-left = 0
module-margin-right = 0

modules-right = filesystem separator  cpu separator memory separator battery separator backlight separator vol separator date separator powermenu
#modules-center = i3 
#modules-left = spotify
modules-left = i3

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2
underline-color = ${colors.white}

tray-detached = true
tray-position = left
tray-offset-x = 0
tray-offset-y = 0
;tray-maxsize = 16
tray-padding = 2 
tray-transparent = false
tray-scale = 1.0

#font-0 = "DejaVu Sans Mono:size=10;2"
font-0 = "Helvetica:size=12;2"
font-1 = "FontAwesome:size=12;2"

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh
interval = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
wrapping-scroll = false

#label-focused = %icon%
;label-focused-font = 1
label-focused-background = ${colors.background-alt}
;label-focused-underline= ${colors.primary}
label-focused-underline= #458588
label-visible-underline = ${colors.foreground}
label-focused-padding-left = 0
label-focused-padding-right = 1

label-unfocused-padding-right = 1
label-unfocused-padding-left = 0

label-occupied = %icon%
label-occupied-foreground = ${colors.darkgray}
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/backlight]
type = custom/script
interval = 0.2
exec = ~/.config/polybar/backlight.sh

scroll-up = exec light -A 5
scroll-down = exec light -U 5

format-prefix = " "

label = %output%
label-foreground = ${colors.foreground}
format-padding = 1


[module/xbacklight]
type = internal/xbacklight
format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
#bar-fill-foreground = #9f78e1
bar-fill-foreground = ${colors.blue}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}
format-padding = 1

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
format-mounted-prefix = " "
#format-mounted-foreground = #928374
format-mounted-foreground = ${colors.foreground}
label-mounted = %percentage_used%%
label-mounted-foreground = ${root.foreground}
label-unmounted = %mountpoint% not mounted
#label-unmounted-foreground = #928374
label-unmounted-foreground = ${colors.orange}

format-mounted-padding = 1
format-unmounted-padding = 1

[module/date]
type = internal/date
date-alt =   %A, %d %B %Y %H:%M
#date = %{F#928374}%{F-} %H:%M
date = %{F$colors.foreground}%{F-} %H:%M
interval = 5
;format-underline = ${colors.white}
;format-background = ${colors.black}
format-foreground = ${colors.foreground}
format-padding = 1

label-separator = |

[module/vol]
type = custom/script
interval = 0.2
exec = ~/.config/polybar/volume.sh

scroll-up = exec pulseaudio-ctl up
scroll-down = exec pulseaudio-ctl down
click-left = exec pulseaudio-ctl mute
format-prefix = " "

label = %output%
label-foreground = ${colors.foreground}
format-padding = 1

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}
label-padding = 2

format-muted-prefix = " "
format-muted-foreground = ${colors.white}
label-muted = sound muted
format-padding = 2

bar-volume-width = 10
#bar-volume-foreground-0 = #55aa55
#bar-volume-foreground-1 = #55aa55
#bar-volume-foreground-2 = #55aa55
#bar-volume-foreground-3 = #55aa55
#bar-volume-foreground-4 = #55aa55
#bar-volume-foreground-5 = #f5a70a
#bar-volume-foreground-6 = #ff5555

bar-volume-foreground-0 = ${colors.orange}
bar-volume-foreground-1 = ${colors.orange}
bar-volume-foreground-2 = ${colors.orange}
bar-volume-foreground-3 = ${colors.orange}
bar-volume-foreground-4 = ${colors.orange}
bar-volume-foreground-5 = ${colors.red}
bar-volume-foreground-6 = ${colors.red}

bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

format-muted-padding = 1
format-volume-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
#format-prefix-foreground = #928374
format-prefix-foreground = ${colors.foreground}
;format-underline = #f90000
